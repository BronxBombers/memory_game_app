<resources>

    <!-- Cartoon Theme -->

        <!--Base Text-->

            <style name="cartoon_BaseText">
                <item name="android:fontFamily">@font/finger_paint</item>
                <item name="android:textColor">@color/cartoon_Text</item>
                <item name="android:background">@android:color/transparent</item>
            </style>

        <!--Base Text-->

        <!--Home Page-->

            <style name="cartoon_HomePage" parent="@style/Theme.AppCompat.Light.NoActionBar">
                <item name="android:background">@color/cartoon_colorPrimaryDark</item>
                <item name="android:textViewStyle">@style/cartoon_homeScreenTitle</item>
            </style>

            <style name="cartoon_homeScreenTitle" parent="@style/cartoon_BaseText">
                <item name="android:textSize">36sp</item>
                <item name="android:background">@color/cartoon_whitePrimary</item>
            </style>

        <!--Home Page-->]


        <!--Level Select-->

            <style name="level_select_title" parent="@style/cartoon_BaseText">
                <item name="android:textSize">56sp</item>
                <item name="android:background">@drawable/stageborder</item>
            </style>
            <style name="cartoon_levels_select" parent="@style/Theme.AppCompat.Light.NoActionBar">
                <item name="android:textViewStyle">@style/level_select_title</item>
                <item name="android:buttonStyle">@style/cartoon_level_select_Buttons</item>
                <item name="android:layout_height">140dp</item>
                <item name="android:layout_width">140dp</item>
            </style>

            <style name="cartoon_level_select_Buttons">
                <item name="android:background">@drawable/cartoon_levelselecttile</item>
                <item name="android:textSize">84sp</item>
                <item name="android:textAlignment">center</item>
            </style>

            <style name="cartoon_levelButtonsText" parent="@style/cartoon_BaseText">
                <item name="android:textSize">84sp</item>
            </style>

        <!--Level Select-->

        <!--Levels-->

            <!--LevelHeader-->

                <style name="cartoon_level_base" parent="@style/Theme.AppCompat.Light.NoActionBar">
                    <item name="android:textViewStyle">@style/cartoon_BaseText</item>
                </style>

            <!--LevelHeader-->

            <style name="cartoon_stage1_level1">
                <item name="android:layout_height">115dp</item><!--100 for 4 inch-->
                <item name="android:layout_width">115dp</item>
            </style>

            <style name="cartoon_stage1_level2">
                <item name="android:layout_height">100dp</item>
                <item name="android:layout_width">100dp</item>
            </style>

            <style name="cartoon_stage1_level3">
                <item name="android:layout_height">100dp</item><!--85 for 4 inch screen, 150 for 7 inch-->
                <item name="android:layout_width">100dp</item>
                <item name="android:layout_marginTop">50dp</item>
            </style>

            <style name="cartoon_stage1_level4">
                <item name="android:layout_height">75dp</item><!--125 for 7 inch, 65 for 4 inch-->
                <item name="android:layout_width">75dp</item>
            </style>

            <style name="cartoon_stage2_level2">
                <item name="android:layout_height">90dp</item><!--125 for 7 inch, 65 for 4 inch-->
                <item name="android:layout_width">90dp</item>
            </style>

            <style name="cartoon_stage2_level3">
                <item name="android:layout_height">90dp</item><!--125 for 7 inch, 65 for 4 inch-->
                <item name="android:layout_width">90dp</item>
            </style>

            <style name="cartoon_stage2_level4">
                <item name="android:layout_height">80dp</item><!--125 for 7 inch, 65 for 4 inch-->
                <item name="android:layout_width">80dp</item>
            </style>

        <!--Levels-->

    <!-- End Cartoon Theme -->


    <!--Murica Theme-->

