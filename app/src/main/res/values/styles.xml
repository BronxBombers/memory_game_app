            </style>

            <style name="murica_levelButtonsText" parent="@style/murica_BaseText">
                <item name="android:textSize">84sp</item>
            </style>

        <!--Level Select-->

        <!--LevelHeader-->

            <style name="murica_level_base" parent="@style/Theme.AppCompat.Light.NoActionBar">
