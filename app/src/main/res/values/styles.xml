            </style>

            <style name="murica_homeScreenTitle" parent="@style/murica_BaseText">
                <item name="android:textSize">36sp</item>
                <item name="android:background">@color/murica_flag_red</item>
            </style>

        <!--Home Page-->]

        <!--Level Select-->


            <style name="murica_level_select_title" parent="@style/murica_BaseText">
