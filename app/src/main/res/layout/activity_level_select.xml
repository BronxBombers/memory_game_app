<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/level_select_buttons_background"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stage_header"
        tools:src="@drawable/cartoon_level_background" />

    <TextView
        android:id="@+id/stage_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAlignment="center"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:text="Hello World" />

        <Button
            android:id="@+id/stage1lvl1"
            android:fontFamily="@font/finger_paint"
            android:gravity="center"
            android:text="@string/stage_select_level_1"
            app:layout_constraintBottom_toBottomOf="@+id/level_select_buttons_background"
            app:layout_constraintEnd_toEndOf="@+id/level_select_buttons_background"
            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintStart_toStartOf="@+id/level_select_buttons_background"
            app:layout_constraintTop_toTopOf="@+id/level_select_buttons_background"
            app:layout_constraintVertical_bias="0.265"
            tools:background="@drawable/murica_level_select_tile"
            tools:layout_height="140dp"
            tools:layout_width="140dp" />

    <Button
        android:id="@+id/stage1lvl2"
        android:gravity="center"
        android:text="@string/stage_select_level_2"
        app:layout_constraintBottom_toBottomOf="@+id/stage1lvl1"
        app:layout_constraintEnd_toEndOf="@+id/level_select_buttons_background"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintStart_toStartOf="@+id/level_select_buttons_background"
        app:layout_constraintTop_toTopOf="@+id/stage1lvl1"
        tools:background="@drawable/murica_level_select_tile"
        tools:layout_height="140dp"
        tools:layout_width="140dp" />

    <Button
        android:id="@+id/stage1lvl3"
        android:gravity="center"
        android:text="@string/stage_select_level_3"
        app:layout_constraintBottom_toBottomOf="@+id/level_select_buttons_background"
        app:layout_constraintEnd_toEndOf="@+id/stage1lvl1"
        app:layout_constraintStart_toStartOf="@+id/stage1lvl1"
        app:layout_constraintTop_toBottomOf="@+id/stage1lvl1"
        app:layout_constraintVertical_bias="0.05"
        tools:background="@drawable/murica_level_select_tile"
        tools:layout_height="140dp"
        tools:layout_width="140dp" />

    <Button
            android:id="@+id/stage1lvl4"
            android:gravity="center"
            android:text="@string/stage_select_level_4"
            app:layout_constraintBottom_toBottomOf="@+id/level_select_buttons_background"
            app:layout_constraintEnd_toEndOf="@+id/stage1lvl2"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/stage1lvl1"
            app:layout_constraintTop_toBottomOf="@+id/stage1lvl2"
            app:layout_constraintVertical_bias="0.05"
            tools:background="@drawable/murica_level_select_tile"
            tools:layout_height="140dp"
            tools:layout_width="140dp" />

        <!-- Stars -->


        <ImageView
            android:id="@+id/level_select_stars_until_next_stage_background"
            android:layout_width="231dp"
            android:layout_height="71dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.57"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.989" />

        <ImageView
            android:id="@+id/level_select_bottom_startCluster2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/level_select_silver_star_cluster"
            app:layout_constraintHorizontal_bias="0.85"
            app:layout_constraintBottom_toBottomOf="@+id/level_select_total_amount_of_stars_textView"
            app:layout_constraintEnd_toEndOf="@+id/level_select_stars_until_next_stage_background"
            app:layout_constraintStart_toStartOf="@+id/level_select_stars_until_next_stage_background"
            app:layout_constraintTop_toTopOf="@+id/level_select_total_amount_of_stars_textView"
            />

        <TextView
            android:id="@+id/level_select_stars_until_next_stage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:textSize="20sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/level_select_stars_until_next_stage_background"
            app:layout_constraintEnd_toEndOf="@+id/level_select_stars_until_next_stage_background"
            app:layout_constraintHorizontal_bias="0.285"
            app:layout_constraintStart_toStartOf="@+id/level_select_stars_until_next_stage_background"
            app:layout_constraintTop_toTopOf="@+id/level_select_stars_until_next_stage_background"
            app:layout_constraintVertical_bias="0.48"
            tools:text="Stage 2 In 10" />

        <ImageView
            android:id="@+id/level_select_bottom_startCluster"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/level_select_silver_star_cluster"
            app:layout_constraintBottom_toBottomOf="@+id/level_select_stars_until_next_stage_background"
            app:layout_constraintEnd_toStartOf="@+id/level_select_bottom_startCluster2"
            app:layout_constraintHorizontal_bias="0.45"
            app:layout_constraintStart_toStartOf="@+id/level_select_stars_until_next_stage_background"
            app:layout_constraintTop_toTopOf="@+id/level_select_stars_until_next_stage_background" />

        <TextView
            android:id="@+id/level_select_total_amount_of_stars_textView"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:background="@android:color/transparent"
            android:text="Of 12"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/level_select_stars_until_next_stage_background"
            app:layout_constraintEnd_toStartOf="@+id/level_select_bottom_startCluster2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/level_select_bottom_startCluster"
            app:layout_constraintTop_toTopOf="@+id/level_select_stars_until_next_stage_background" />

        <TextView
            android:id="@+id/level_select_current_amount_of_stars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="10"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@+id/level_select_stars_until_next_stage_background"
            app:layout_constraintEnd_toStartOf="@+id/level_select_bottom_startCluster"
            app:layout_constraintHorizontal_bias="0.9"
            app:layout_constraintStart_toStartOf="@+id/level_select_stars_until_next_stage_background"
            app:layout_constraintTop_toTopOf="@+id/level_select_stars_until_next_stage_background" />

    <Button
        android:id="@+id/level_select_next_stage_unlocked_prompt"
        android:layout_width="309dp"
        android:layout_height="150dp"
        android:background="@drawable/textbanner"
        android:gravity="center_vertical"
        android:text="Next Stage Unlocked!!"
        android:textAlignment="center"
        android:textSize="24sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@drawable/cartoon_button" />

    <ImageView
        android:id="@+id/stage_locked_lock"
        android:layout_width="0dp"
        android:layout_height="320dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <Button
            android:id="@+id/level_1_stars"
            android:layout_width="115dp"
            android:layout_height="35dp"
            android:background="@android:color/transparent"
            app:layout_constraintBottom_toBottomOf="@+id/stage1lvl1"
            app:layout_constraintEnd_toEndOf="@+id/stage1lvl1"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/stage1lvl1"
            app:layout_constraintTop_toTopOf="@+id/stage1lvl1"
            app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/level_2_stars"
        android:layout_width="115dp"
        android:layout_height="35dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="@+id/stage1lvl2"
        app:layout_constraintEnd_toEndOf="@+id/stage1lvl2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/stage1lvl2"
        app:layout_constraintTop_toTopOf="@+id/stage1lvl2"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/level_3_stars"
        android:layout_width="115dp"
        android:layout_height="35dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="@+id/stage1lvl3"
        app:layout_constraintEnd_toEndOf="@+id/stage1lvl3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/stage1lvl3"
        app:layout_constraintTop_toTopOf="@+id/stage1lvl3"
        app:layout_constraintVertical_bias="0.0" />

    <Button
            android:id="@+id/level_4_stars"
            android:layout_width="115dp"
            android:layout_height="35dp"
        android:background="@android:color/transparent"
            app:layout_constraintBottom_toBottomOf="@+id/stage1lvl4"
            app:layout_constraintEnd_toEndOf="@+id/stage1lvl4"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/stage1lvl4"
            app:layout_constraintTop_toTopOf="@+id/stage1lvl4"
            app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/swipe_indicate_1"
        android:layout_width="64dp"
        android:layout_height="104dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/stage_locked_lock"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.884"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/level_select_buttons_background"
        app:layout_constraintVertical_bias="0.333"
        app:srcCompat="@drawable/swipe_indicator_left" />

    <ImageView
        android:id="@+id/swipe_indicate_2"
        android:layout_width="71dp"
        android:layout_height="104dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/stage_locked_lock"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.789"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/level_select_buttons_background"
        app:layout_constraintVertical_bias="0.6"
        app:srcCompat="@drawable/swipe_indicator_left" />

    <Button
        android:id="@+id/swipeindicator"
        android:layout_width="123dp"
        android:layout_height="192dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/swipe_indicator_left"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.967"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />

</android.support.constraint.ConstraintLayout>
