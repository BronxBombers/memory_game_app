<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"  xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/cartoon_popup_text_holder"
    android:id="@+id/alert_dialog_container">

    <TextView
        android:id="@+id/alert_dialog_title_text"
        android:layout_width="249dp"
        android:layout_height="74dp"
        android:background="@android:color/transparent"
        android:text="Are you sure you want to quit?"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.345" />

    <TextView
        android:id="@+id/alert_dialog_subtitle"
        android:layout_width="210dp"
        android:layout_height="44dp"
        android:background="@android:color/transparent"
        android:text="(You will lose all progress for this level)"
        android:textAlignment="center"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/alert_dialog_title_text"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="@+id/alert_dialog_title_text"
        app:layout_constraintTop_toBottomOf="@+id/alert_dialog_title_text"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/alert_dialog_dont_quit"
        android:layout_width="175dp"
        android:layout_height="85dp"
        android:text="Don't Quit"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/alert_dialog_title_text"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="@+id/alert_dialog_title_text"
        app:layout_constraintTop_toBottomOf="@+id/alert_dialog_subtitle"
        app:layout_constraintVertical_bias="0.754"
        tools:background="@drawable/cartoon_button" />

    <Button
        android:id="@+id/alert_dialog_quit"
        android:layout_width="175dp"
        android:layout_height="85dp"
        android:text="Quit"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/alert_dialog_dont_quit"
        app:layout_constraintEnd_toEndOf="@+id/alert_dialog_title_text"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="@+id/alert_dialog_title_text"
        app:layout_constraintTop_toBottomOf="@+id/alert_dialog_subtitle"
        app:layout_constraintVertical_bias="0.7"
        tools:background="@drawable/cartoon_button" />
</android.support.constraint.ConstraintLayout>